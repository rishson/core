{
	"version": "2.0.2",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"baseUrl": "node_modules",
		"removeComments": false,
		"target": "es5",
		"experimentalDecorators": true,
		"sourceMap": true,
		"moduleResolution": "classic",
		"strictNullChecks": true,
		"noImplicitThis": true
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	]
}
